{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "deploy (server)",
			"type": "shell",
			"command": "zsh ./deploy.sh",
			"problemMatcher": []
		},
		{
			"label": "deploy (daemon)",
			"type": "shell",
			"command": "zsh ./deploy-daemon.sh",
			"problemMatcher": []
		},
		{
			"label": "client",
			"type": "shell",
			"command": "pnpm run dev",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/client"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "build client (dev)",
			"type": "shell",
			"command": "pnpm run build --mode development",
			"options": {
				"cwd": "${workspaceFolder}/client"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "lint",
			"type": "shell",
			"command": "pnpm run lint",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$tsc",
				"$eslint-stylish",
			]
		}
	]
}